#: import ew kivy.uix.effectwidget

<MusicScreen@Screen>:
    EffectWidget:
        effects: [ew.HorizontalBlurEffect(size=10.0), ew.VerticalBlurEffect(size=10.0)]
        FitImage:
            id: background_image
            source: "image.jpg"

    MDBoxLayout:
        orientation: "vertical"
        padding: ['10dp', '30dp', '10dp', '50dp']
        SongCover:
            id: sc
            size: (250, 250)
            size_hint: None, None
            pos_hint: {"center_x": .5}
            rotate_image: rotate_image
            background_image: background_image
            artist_name: artist_name
            song_name: song_name
            process_bar: process_bar
            btn_play: btn_play
            current_time: current_time
            total_time: total_time
            btn_loop: btn_loop

            RotatingImage:
                angle: sc.angle
                source: "image.jpg"
                radius: [250, ]
                id: rotate_image
        
        Widget:
            size_hint: None, None
            height: '25dp'
        Label:
            id: song_name
            text: "Song Name"
            bold: True
            font_size: '25sp'
            size_hint_y: None
            height: self.texture_size[1]

        Label:
            id: artist_name
            text: "Artist Name"
            size_hint_y: None
            height: self.texture_size[1]
        
        MDBoxLayout:
            orientation: "vertical"
            MDBoxLayout:
                orientation: "vertical"
                size_hint_y: None
                RelativeLayout:
                    Label:
                        id: current_time
                        text: "00:00"
                        pos_hint: {'center_x': .1,'center_y':0}
                    Label:
                        id: total_time
                        text: "00:00"
                        pos_hint: {'center_x': .9,'center_y':0}
                MDSlider:
                    id: process_bar
                    min: 0
                    max: 100
                    value: 0
                    background_width: '20dp'
                    cursor_image: ''
                    cursor_size: ('10dp', '10dp')
                    on_touch_move: sc.seek()
                    on_touch_up: sc.seek()

            MDBoxLayout:
                MyIcon:
                    id: btn_loop
                    icon: 'restart'
                    on_press: sc.loop()
                MyIcon:
                    icon: 'skip-previous-outline'
                    on_press: sc.previous()
                MyIcon:
                    icon: 'skip-backward-outline'
                MyIcon:
                    id: btn_play
                    icon: 'play-outline'
                    on_press: sc.play()
                MyIcon:
                    icon: 'skip-forward'
                MyIcon:
                    icon: 'skip-next-outline'
                    on_press: sc.next()
                MyIcon:
                    icon: 'format-list-bulleted'

<MyIcon@MDIconButton>:
    size_hint: None, None
    user_font_size: '20sp'
    text_color: [1,1,1,1]
    color: [.7, 0, 0, 1]
    theme_text_color: 'Custom'
    size: ('20dp', '20dp')                

<RotatingImage@FitImage>:
    angle: 0
    canvas.before:
        PushMatrix
        Rotate:
            angle: root.angle
            origin: self.center
    canvas.after:
        PopMatrix

